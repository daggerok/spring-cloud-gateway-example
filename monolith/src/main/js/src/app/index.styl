@import url('https://fonts.googleapis.com/icon?family=Material+Icons')
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500')

body
  margin: 0
  background-color: #444

h1
  color: white
  font-size: 3em
  font-family: Roboto, Helvetica, sans-serif, 'DejaVu Sans', Arial
  text-shadow: 0 0 25px white

.container
  min-height 100vh
  min-width 50vw
  display flex
  align-items center
  justify-content center
  flex-flow column

  img
    border-radius 100%
    max-height 50vh
    max-width 50vw
    box-shadow 0 0 0.5em #191919

  h1
    height 25vh
